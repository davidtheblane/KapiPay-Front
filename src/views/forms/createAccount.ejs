  <!-- FORM -->

  <div class="container">
    <form id="form-createAccount">

      <h1>Criar Conta Digital</h1>
      </hr>

      <div class=" mb-3">
        <label for="name" class="form-label">Nome</label>
        <input type="text" id="name" name="name" class="form-control" placeholder="Pegar do user logado" required />
      </div>

      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" id="email" name="email" class="form-control" placeholder="Pegar do user logado" required />
      </div>

      <div class="mb-3">
        <label for="cpf" class="form-label">CPF</label>
        <input type="text" id="cpf" name="cpf" class="form-control" required />
      </div>

      <div class="mb-3">
        <label for="birthDate" class="form-label">Data de Nascimento</label>
        <input type="text" id="birthDate" name="birthDate" class="form-control" placeholder="ANO-MES-DIA" required />
      </div>

      <div class="mb-3">
        <label for="phone" class="form-label">Telefone</label>
        <input type="text" id="phone" name="phone" class="form-control" placeholder="55+DDD+Numero" required />
      </div>

      <hr>


      <!-- ENDEREÇO -->

      <div class="mb-3">
        <h3>Endereço</h3>
        <div>
          <input type="text" id="postCode" name="postCode" class="form-control col-md-6" required
            placeholder="Digite seu CEP" />
          <label for="postCode" class="form-label">
            <button id="btn_cep" type="button" class="btn btn-success">Pesquisar</button>
          </label>
        </div>
        <label for="street" class="form-label">Rua</label>
        <input type="text" id="street" name="street" class="form-control" required />

        <label for="number" class="form-label">Número</label>
        <input type="text" id="number" name="number" class="form-control" required />

        <label for="complement" class="form-label">Complemento</label>
        <input type="text" id="complement" name="complement" class="form-control" placeholder="Opcional" />

        <label for="neighborhood" class="form-label">Bairro</label>
        <input type="text" id="neighborhood" name="neighborhood" class="form-control" required />

        <label for="city" class="form-label">Cidade</label>
        <input type="text" id="city" name="city" class="form-control" required />

        <label for="state" class="form-label">Estado</label>
        <input type="text" id="state" name="state" class="form-control" required />
      </div>
      <hr>


      <!-- RENDA MENSAL -->

      <div class="mb-3">
        <h3>Renda Mensal</h3>
        <label for="monthlyIncome" class="form-label">Valor sem virgula ou ponto</label>
        <input type="number" id="monthlyIncome" name="monthlyIncome" class="form-control" required />
      </div>

      <hr>


