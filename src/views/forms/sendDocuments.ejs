<!-- STYLE -->
<style>
  .container {
    margin: 0 auto;
    width: 70%;
    display: flex;
    flex-direction: column;
    align-items: left;
    font-size: 12px;
  }

  .verify_status {

    background-color: #2F8754;
    color: white;
    padding: 1rem;
    border-radius: 5px;
    font-size: 1.2rem;
  }

  .verify_documents {
    color: white;
    background-color: #2F8754;
    padding: 1rem;
    border-radius: 5px;
    font-size: 1.2rem;
  }

  /* .account_status,
  .doc_status {
    height: 6rem;
  } */

  .form-title {
    color: white;
    background-color: #2F8754;
    margin-top: 1rem;
    padding: 1rem;
    border-radius: 5px;
    font-size: 1.2rem;
  }

  #form-send-documents {
    padding-left: 1rem;
  }


  input:valid {
    border: 1px solid lightgreen;
  }
