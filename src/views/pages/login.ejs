<!DOCTYPE html>
<!-- CSS -->
<style>
  body {
    margin: 0 auto;
  }

  .container {
    width: 500px;
    margin: 0 auto;
    /* border: 1px dotted gray; */
    padding: 1rem;
    margin-top: 3rem;
    margin-bottom: 3rem;
  }

  form {
    width: 400px;
    margin: 0 auto;
  }

  input:valid {
    border: 1px solid lightgreen;
  }

  .colored-toast.swal2-icon-success {
    background-color: #a5dc86 !important;
  }

  img {
    width: 100px;
    height: 100px;
  }
</style>



<!-- HTML -->

<head>
  <%- include('../partials/head') %>
</head>

<body>

  <div class="container">
    <div class="logo">
      <img src="imgs/kapipay_logo.png" class="rounded mx-auto d-block" alt="kapipay logo">
      <br>
      <h1 class="display-4 text-center fw-bold lh-1 mb-3">Kapipay</h1>
      <br>
      <p class="text-center fs-4">Você agenda... nós pagamos!</p>
    </div>
    <form id="form-login">
      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" id="email" name="email" class="form-control form-control-sm" aria-describedby="emailHelp"
          required />
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Senha</label>
        <input type="password" class="form-control form-control-sm" id="password" name="password" required />

        <div id="emailHelp" class="form-text">
          Não iremos compartilhar sua senha com ninguém.
        </div>
      </div>
      <!-- <div class="mb-3 form-check">
        <input type="checkbox" class="form-check-input" id="exampleCheck1" />
        <label class="form-check-label" for="exampleCheck1">Lembrar senha</label>
      </div> -->
      <button id="btn_login" type="button" class="btn btn-success">Entrar</button>
      <a href="/register" class="btn btn-outline-success">Criar conta</a>

      <div>
        <br>
        <a href="/forgot_password">Esqueci a senha</a>
      </div>

    </form>
  </div>

  <footer>
    <%- include('../partials/footer') %>
  </footer>


  <!-- SCRIPT -->
  <script src="js/login.js"></script>


</body>